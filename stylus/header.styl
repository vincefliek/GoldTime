/*!----------------------------------------
 *  Header
 *----------------------------------------*/

/*! ============ logo ============ */
.LOGO
  padding vw(35) 0
  border-top 10px solid baseBlack

  &__img
    margin 0 auto

    @media (min-width: 768px)
      width vw(477)

/*! ============ navigation ============ */
elem_padding = 20px

.NAV
  position relative
  rem()

  .navbar-default
    background-color: transparent;
    border-color: transparent;

  .navbar-collapse
    @media (min-width: 768px)
      margin 0 auto

  .navbar-brand
    @media (min-width: 768px)
      display none

  &__address-link-wrapper
    @media (max-width: 767px)
      text-align center

  &__address-link
    position relative
    padding 0 0 elem_padding 25px
    display inline-block

    &:before
      content ''
      position absolute
      top -3px
      left 0
      display inline-block
      setSprite($nav_address, $urlSpriteGT)
      background-repeat no-repeat

  &__list
    padding 0
    text-align center

    @media only screen and (min-width: 768px)
      float none

  & li&__li
    padding 0 1vw
    text-transform uppercase

    @media only screen and (min-width: 768px)
      position static
      display inline-block
      float none

    > a
      padding 0 0 elem_padding
      display block
      color baseBlack

    &.open > a.dropdown-toggle
      padding 0
      color baseBlack
      background-color transparent

  &__cart-wrapper
    text-align right

    @media (max-width: 767px)
      text-align center

  &__cart
    position relative
    padding 0 0 elem_padding 25px
    display inline-block

    &:before
      content ''
      position absolute
      top -3px
      left 0
      display inline-block
      setSprite($nav_cart, $urlSpriteGT)
      background-repeat no-repeat

  &__cart-number
    &:before
      content '('

    &:after
      content ')'

  &__all-dds
    position relative

  &__dropdown
    z-index 1050
    position absolute
    left 0
    right 0
    margin-top 20px
    padding 30px 0
    border 1px solid #969696

  &__dd-column
    color #000

    &--br-rt
      border-right 1px solid #cccccc

    &--br-lt
      border-left 1px solid #cccccc

  &__dd-h4
    color baseBlack
    em(18, 14)
    font-weight 700

  &__dd-list
    > li
      > a
        color #919191
        em(16, 14)
        text-transform none

    &--bottom
      padding-bottom 1em

  > .row >
    [class*='col-xs-']
    [class*='col-sm-']
    [class*='col-md-']
    [class*='col-lg-']
      position static
