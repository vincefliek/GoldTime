.js-sb
  min-height 400px
  background-color rgba(#008800, .1)

.js-sb-main
  z-index 1001
  width 270px
  position fixed
  top 0
  left -(@width)
  bottom 0
  min-height 100%
  background-color #008800
  prefs(transition, .3s, -ms-)

.js-sb-visible
  left 0

.js-sb-bg
  z-index 1000
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  background-color rgba(#fff, .7)
  iebgrgba('B2FFFFFF')

